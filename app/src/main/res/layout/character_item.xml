<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pokemon_detail_character_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        android:minWidth="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pokemon_detail_hide_character_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/character"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/pokemon_detail_character_item"
        app:layout_constraintStart_toStartOf="@id/pokemon_detail_character_item"
        app:layout_constraintTop_toBottomOf="@id/pokemon_detail_character_item" />

    <View
        android:id="@+id/pokemon_detail_character_line"
        android:layout_width="2dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/pokemon_detail_character_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/pokemon_detail_character_item"
        app:layout_constraintTop_toTopOf="@id/pokemon_detail_character_item" />

</androidx.constraintlayout.widget.ConstraintLayout>