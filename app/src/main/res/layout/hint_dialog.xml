<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/hint_dialog_style">

    <TextView
        android:id="@+id/hint_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="#1B2837"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hint_cancel_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:text="@string/cancel"
        android:textColor="#DADADA"
        app:layout_constraintRight_toLeftOf="@id/hint_ok_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hint_hint" />

    <View
        android:layout_width="1px"
        android:layout_height="50dp"
        android:background="#9A9A9A"
        app:layout_constraintLeft_toRightOf="@id/hint_cancel_btn"
        app:layout_constraintRight_toLeftOf="@id/hint_ok_btn"
        app:layout_constraintTop_toTopOf="@id/hint_cancel_btn"/>


    <Button
        android:id="@+id/hint_ok_btn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@null"
        android:text="@string/certain"
        android:textColor="#839EFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hint_cancel_btn"
        app:layout_constraintTop_toBottomOf="@+id/hint_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>