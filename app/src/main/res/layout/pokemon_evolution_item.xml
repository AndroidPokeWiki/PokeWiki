<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pokemon_detail_evu_item_bg_selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pokemon_detail_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/pokemon_detail_evu_item_bg_unselect"
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/pokemon_evu_unselect_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/pokemon_detail_evu_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pokemon_detail_evu_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/pokemon_detail_evu_item_img"
        app:layout_constraintEnd_toEndOf="@id/pokemon_detail_evu_item_img"
        app:layout_constraintTop_toBottomOf="@id/pokemon_detail_evu_item_img"/>

    <TextView
        android:id="@+id/pokemon_detail_evu_item_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/pokemon_detail_evu_item_name"
        app:layout_constraintEnd_toEndOf="@id/pokemon_detail_evu_item_name"
        app:layout_constraintTop_toBottomOf="@id/pokemon_detail_evu_item_name"/>

    <View
        android:id="@+id/pokemon_detail_evu_item_line"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="2dp"
        android:background="#C4C4C4"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@id/pokemon_detail_evu_item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/pokemon_detail_evu_item_img"
        app:layout_constraintBottom_toBottomOf="@id/pokemon_detail_evu_item_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>