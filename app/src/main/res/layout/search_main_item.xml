<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_main_item_bg"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_main_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/search_main_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:maxLength="6"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/search_main_item_img"
            app:layout_constraintStart_toEndOf="@+id/search_main_item_img"
            app:layout_constraintTop_toTopOf="@+id/search_main_item_img" />

        <LinearLayout
            android:id="@+id/search_main_item_attr_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/search_main_item_img"
            app:layout_constraintEnd_toStartOf="@+id/search_main_item_id"
            app:layout_constraintTop_toTopOf="@+id/search_main_item_img" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/search_main_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="11sp"

            app:border_color_normal="#6a6a6a"
            app:border_width_normal="1dp"
            app:corner_radius="100dp"
            app:layout_constraintBottom_toBottomOf="@+id/search_main_item_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/search_main_item_img" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


